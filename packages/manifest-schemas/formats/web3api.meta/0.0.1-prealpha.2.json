{
    "id": "MetaManifest",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "format",
        "name"
    ],
    "properties": {
        "format": {
            "type": "string",
            "const": "0.0.1-prealpha.1"
        },
        "name": {
            "type": "string"
        },
        "subtext": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "repository": {
            "type": "string",
            "format": "websiteUrl"
        },
        "icon": {
            "type": "string",
            "format": "imageFile"
        },
        "links": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "icon": {
                        "type": "string",
                        "format": "imageFile"
                    },
                    "url": {
                        "type": "string",
                        "format": "websiteUrl"
                    }
                },
                "required": [
                    "name",
                    "url"
                ]
            }
        },
        "cookbook": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "recipes"
            ],
            "properties": {
                "constants": {
                    "oneOf": [
                        {
                            "type": "string",
                            "format": "jsonFile"
                        },
                        {
                            "type": "string",
                            "format": "yamlFile"
                        },
                        {
                            "type": "object",
                            "patternProperties": {
                                ".*": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                },
                "menus": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "recipes": {
                    "$ref": "#/$defs/recipes"
                }
            }
        }
    },
    "$defs": {
        "recipes": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "oneOf": [
                        {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "query": {
                                        "type": "string",
                                        "$comment": "can be a query or a graphql file"
                                    },
                                    "variables": {
                                        "type": "object"
                                    }
                                },
                                "required": ["query"]
                            }
                        },
                        {
                            "$ref": "#/$defs/recipes"
                        }
                    ]
                }
            }
        }
    }
}
