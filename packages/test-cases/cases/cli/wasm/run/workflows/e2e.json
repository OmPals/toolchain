{
  "name": "simple-storage",
  "jobs": {
    "cases": {
      "steps": [
        {
          "uri": "fs/build",
          "method": "deployContract",
          "input": { "connection": null }
        }
      ],
      "jobs": {
        "case1": {
          "steps": [
            {
              "uri": "fs/build",
              "method": "setData",
              "input": {
                "options": {
                  "address": "$cases.0.data",
                  "value": 100
                },
                "connection": null
              }
            },
            {
              "uri": "fs/build",
              "method": "getData",
              "input": { "address": "$cases.0.data", "connection": null }
            }
          ]
        }
      }
    }
  }
}
